<%# Puppies can be anything, this is esentially the name of the channel streaming %>
<%# Remember, the "current_company.name + puppies" is to give each channel a distinct name %>
<%= turbo_stream_from (current_company.name + "puppies") %>

<main class="container">
  <div class="header">
    <h1>Quotes</h1>
    <%= link_to "New Quote",
                new_quote_path,
                data: { turbo_frame: "second_frame" },
                class: "btn btn--primary",
                data: { turbo_frame: dom_id(Quote.new) } %>
  </div>

  <%= turbo_frame_tag Quote.new %>

  <%= turbo_frame_tag "quotes" do%>
    <%= render "quotes/empty_state" %>
    <%= render @quotes %>
  <% end %>

</main>

